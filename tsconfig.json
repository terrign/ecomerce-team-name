{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "allowUmdGlobalAccess": true,
    "lib": ["dom", "es6"],
    "esModuleInterop": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
